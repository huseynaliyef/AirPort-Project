@using Business.DTOs
@using System.Collections

@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Search" asp-controller="Home" method="get">

    <div class="container px-4 text-center">
        <div class="row gx-5">
            <div class="col-10">
                <div class="p-3">
                    <span class="input-group-text">EffectiveDate</span>
                    <input type="datetime-local" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="EffectiveDate" />
                </div>
            </div>
            <div class="col-2">
                <div class="p-3">
                    <select class="form-select" aria-label="Default select example" name="State" style="width:%;">
                        @foreach (var state in Enum.GetValues(typeof(States)))
                        {
                            <option>@state</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="row gx-5">
            <div class="col-10">
                <div class="p-3">
                    <button type="submit" class="btn btn-warning">Search</button>
                </div>
            </div>
        </div>
    </div>

</form>



