@using Business.DTOs.Viewmodels
@using Data.Entities;
@model EditViewModel;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<form class="row g-3" asp-action="Edit" asp-controller="Home" method="post">

    <div class="input-group mb-3" style="display:none;">
        <label for="inputIdentifier" class="visually-hidden">Identifier</label>
        <input type="text" class="form-control" id="inputIdentifier" placeholder="Identifier" name="Identifier"  value="@Model.Identifier">
    </div>

    <div class="input-group mb-3">
        <label for="inputName" class="visually-hidden">Name</label>
        <input type="text" class="form-control" id="inputName" placeholder="Name" name="Name">
    </div>

    <div class="input-group mb-3">
        <label for="inputLatitude" class="visually-hidden">Latitude</label>
        <input type="text" class="form-control" id="inputLatitude" placeholder="Latitude" name="Latitude">
    </div>

    <div class="input-group mb-3">
        <label for="inputLongitude" class="visually-hidden">Longitude</label>
        <input type="text" class="form-control" id="inputLongitude" placeholder="Longitude" name="Longitude">
    </div>


    <div class="input-group mb-3">
        <span class="input-group-text">EffectiveDate</span>
        <input type="datetime-local" name="EffectiveDate" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value=@Model.VTBegin.ToString("yyyy-MM-ddTHH:mm") />
    </div>

    <div id ="endEDBox" class="input-group mb-3" style="display: none;">
        <span class="input-group-text">End EffectiveDate</span>
        <input type="datetime-local" name="EndEffectiveDate" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value=@Model.VTEnd?.ToString("yyyy-MM-ddTHH:mm") />
    </div>

    <select class="form-select" aria-label="Default select example" name="Interpretation" id="optionBox" onchange="showInputBox()">
        @foreach (Delta project in Enum.GetValues(typeof(Delta)))
        {
            var inter = Model.Interpretation;
            if (project == inter)
            {
                <option selected>@project</option>

            }
            else
            {
                <option>@project</option>
            }
        }
    </select>


    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Edit</button>
    </div>


</form>


